{
    "require": {
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/orm": "^2.7",
        "php-di/php-di": "^6.1",
        "selective/config": "^0.2.0",
        "slim/psr7": "^1.1",
        "slim/slim": "4.*",
        "symfony/serializer": "^5.0",
        "zircote/swagger-php": "^3.0",
      "ext-fileinfo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    }
}
